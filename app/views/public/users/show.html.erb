<div class="container">
  <div class="row">
    <div class="col-6 my-5">
      <h2 class="bg-brown col-5">マイページ</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <table class="table table-borderless">
        <tr>
          <td><h2>登録情報</h2></td>
          <td><%= link_to "編集する", edit_user_path, class: 'btn btn-lg btn-success' %></td>
        </tr>
      </table>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-secondary w-30">ユーザー名</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td class="table-secondary w-30">メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
      
      <table class="table table-borderless">
        <tr>
          <td><h3>投稿一覧</h3></td>
          <td><%= link_to "一覧を見る", posts_path, class:"btn btn-primary" %></td>
        </tr>
        <tr>
          <td><h3>一週間の献立</h3></td>
          <% @saved_posts.each do |saved_post| %>
          <td><%= image_tag saved_post.get_post_image(400,550) %></td> 
          <td><%= saved_post.name %></td>
          <td><%= link_to "保存解除", post_saved_post_path(saved_post), method: :delete, data: { confirm: '本当に保存を解除しますか？' } %></td>
         <% end %>
        </tr>
      </table>
      <%= link_to 'いいねした投稿一覧', favorited_posts_user_path(@user) %>
    </div>
  </div>
</div>
