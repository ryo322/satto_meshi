<div class="container">
   <%= render 'flash/notice' %>
  <div class="row my-5">
    <div class="col-6">
     <%= render 'info', user: @user %>
    </div>
  </div>
  <div class="row">
    <div class="toggle-view">
    <%= link_to '投稿一覧', user_path(@user, view: 'my_posts') %>
    <%= link_to 'Liked Posts', user_path(@user, view: 'favorited_posts') %>
  </div>
    <table class="table">
      <thead class="bg-light">
        <%= render 'public/posts/post_thead' %>
      </thead>
      <tbody class="tbody">
        <% if params[:view] == 'my_posts' %>
        <% @user.posts.each do |post| %>
          <%= render partial: 'public/posts/post_tbody', locals: { post: post } %>
        <% end %>
        <% else %>
        <% @favorited_posts.each do |post| %>
              <%= render partial: 'public/posts/post_tbody', locals: { post: post } %>
            <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>