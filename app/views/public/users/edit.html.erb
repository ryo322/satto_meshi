<div class="container">
  <div class="row justify-content-start">
    <div class="col-6">
      <h2 class="bg- my-5 col-5">会員情報編集</h2>
        <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :ユーザー名 %></td>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td> <%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :紹介文 %></td>
            <td><%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "編集する" %></td>
           <td><%= link_to "退会する", confirm_user_path(current_user), class:'btn btn-danger btn-lg' %></td>
          </tr>
        </table>
       <% end %>
    </div>
  </div>
</div>

