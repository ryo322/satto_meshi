<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6 my-5">
      <h4>会員情報編集</h4>
      <%= render 'error' %>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :ユーザー名 %>
          <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: "form-control", autofocus: true, autocomplete: "introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image, class: "form-control-file" %>
        </div>
        <div class="form-group">
          <% unless current_user && current_user.email == 'guest@example.com' %>
            <%= f.submit "編集する", class: "btn btn-success btn-lg" %>
          <% end %>
        </div>
        <%= link_to "退会する", confirm_user_path(current_user), class: 'btn btn-danger btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
