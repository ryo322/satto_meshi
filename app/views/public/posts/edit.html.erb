<div class="container">
  <div class="row">
    <div class="col-3 my-5 bg-brown">
      <h3>レシピ編集</h3>
    </div>
    <%= render 'error' %>
  </div>
  <div class="row">
    <div class="mx-auto">
     <%= form_with model: @post, url: post_path, multipart: true do |f| %>
       <%= render 'form', f: f %>
       <%= f.submit "編集する", class:"btn btn-success" %>
     <% end %>
    </div>
  </div>
</div>