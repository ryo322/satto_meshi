<h2>検索結果</h2>
<table class="table table-hover table-inverse">
  <% if @range == "ユーザー" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "レシピ" %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <% if @tags.present? %>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
      </tr>
    <% end %>
  </tbody>
<% end %>
  <% end %>
</table>