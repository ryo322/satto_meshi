<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2 class="mt-5 text-center">ログイン</h2>
      <p class="alert"><%= alert %></p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>   
  </div>
</div>