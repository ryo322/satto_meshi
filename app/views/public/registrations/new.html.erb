<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2 class="mt-5 text-center">新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/users/error", resource: resource %>
        <div class="form-group">
          <%= f.label :ユーザー名 %>
          <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード（確認） %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>
        <%= f.submit "会員登録", class: "btn btn-success btn-block" %>
      <% end %>
    </div>
  </div>
</div>

