<div class="container">
  <div class="row justify-content-start">
    <div class="col-6">
      <h2 class="bg- mt-5 col-5">新規会員登録</h2>
      <p>　※は必須項目</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/users/error", resource: resource %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :ユーザー名※ %></td>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス※ %></td>
            <td> <%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード※ %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（確認）※ %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :紹介文 %></td>
            <td><%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %></td>
          </tr>
          <tr>
            <td><%= f.label :プロフィール画像 %></td>
            <td><%= f.file_field :profile_image %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "会員登録", class: "btn btn-success" %></td>
          </tr>
        </table>
        <% end %>
    </div>
  </div>
</div>
