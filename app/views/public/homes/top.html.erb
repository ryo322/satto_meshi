<div class="container">
  <div class="row">
     <div class="col-8 mt-5">
        <%= render 'slide' %>
     </div>
      <h3 class="mt-2">新着レシピ</h3>
     　  <div class="row">
          <div class="col-3 lg-4 mt-3">
              <div class="card-body" style="padding: 0;">
                <% @posts.each do |post| %>
                 <div class="col-3 lg-4 mt-3">
                  <div class="card w-100 bg-transparent border-0">
                    <%= link_to post_path(post.id) do %>
                      <%= image_tag post.get_post_image(150, 100) %>
                    <% end %>
                    <div class="card-body" style="padding: 0;">
                      <%= post.name %>
                    </div>
                  </div>
                 <% end %>
                </div>
              </div>
           </div>
         </div>
   </div>
 </div>
