<div class="container">
  <div class="row">
    <div class="col-2 my-5 bg-brown">
      <h3> 会員一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table">
        <thead>
          <tr class="bg-brown">
            <th style="width: 10%">会員ID</th>
            <th style="width: 30%">ユーザー名</th>
            <th style="width: 40%">メールアドレス</th>
            <th style="width: 20%">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
           <td><%= user.id %></td>
           <td><%= link_to user.name, admin_user_path(user.id), class:"link-order-customer" %></td>
           <td><%= user.email %></td>
           <td>
             <% if user.is_deleted == false %>
              <p class="text-success">有効</p>
             <% else %>
              <p class="text-secondary">退会</p>
             <% end %>
           </td>
          </tr>
         <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>
