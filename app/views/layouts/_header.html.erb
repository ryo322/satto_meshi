<header>
  <nav class="navbar navbar-expand-lg py-3 bg-logo" style="background-image: url(<%= asset_path "logobg.jpg"%>);">
    <div class="container">
      <%= link_to root_path, class: "mx-0" do %>
        <%= image_tag "logo.png", alt: "LOGO", size: "200x70" %>
      <% end %>

      <%= render 'public/searches/form' %>

      <div class="d-flex flex-column">
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user), class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "レシピ一覧", posts_path, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "投稿", new_post_path, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "ホーム", admin_root_path, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "通報リスト", admin_reports_path, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", admin_users_path, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "レシピ一覧", posts_path, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-dark text-dark nav-link ml-2" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
